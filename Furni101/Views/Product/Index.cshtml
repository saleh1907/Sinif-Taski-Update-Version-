@Model List<Product>

@{
    Layout = "_Layout";
}
    <div class="container">
        <div class="row">
            <div class="col-4"><h2>Products</h2></div>
            <a class="btn btn-succes" asp-action="Create">Create</a>
            <table class="table table-striped table-dark">
                <thead>
                    <tr>
                        <th scope="col">Id</th>
                        <th scope="col">Name</th>
                        <th scope="col">Price</th>
                        <th scope="col">ImageName</th>
                        <th scope="col">ImageUrl</th>
                        <th scope="col">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (Product productt in Model)
                    {

                        <tr>
                            <th scope="row">@productt.Id</th>
                            <td>@productt.Name</td>
                            <td>@productt.Price</td>
                            <td>@productt.ImageName</td>
                            <td>@productt.ImageUrl</td>
                            @* <td> <img src="~/assets/images/website-images/@productt.MainImagePath" width="30" height="30" alt="Alternate Text" /></td>
                            <td> <img src="~/assets/images/website-images/@productt.HoverImagePath" width="30" height="30" alt="Alternate Text" /></td> *@
                            <td>
                                <a asp-action="Detail" asp-route-id="@productt.Id" class="btn btn-danger"><i class="fa-solid fa-info"></i></a>
                                <a asp-action="Update" asp-route-id="@productt.Id" class="btn btn-danger"><i class="fa-solid fa-pen-to-square"></i></a>
                                <a asp-action="Delete" asp-route-id="@productt.Id" class="btn btn-danger"><i class="fa-solid fa-trash"></i></a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
