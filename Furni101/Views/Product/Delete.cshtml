
@model Furni101.Models.Product

@{
    ViewData["Title"] = "Delete Product";
}

<div class="container mt-4">
    <h2 class="text-danger">Delete Product</h2>

    <div class="alert alert-warning">
        <strong>Are you sure?</strong>
        This product will be deleted permanently.
    </div>

    <ul class="list-group mb-3">
        <li class="list-group-item"><strong>Name:</strong> @Model.Name</li>
        <li class="list-group-item"><strong>Price:</strong> @Model.Price</li>
    </ul>

    <form method="post" asp-action="DeleteConfirmed">
        <input type="hidden" name="id" value="@Model.Id" />

        <button type="submit" class="btn btn-danger">Yes, Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
